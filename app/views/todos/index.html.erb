<div class="page-header">
  <h1>
    Todos
    <%= link_to new_todo_url, :class => "btn btn-lg btn-success" do %>
      <i class="fa fa-plus"></i>
    <% end  %>
  </h1>
</div>


<% if current_user.present? %>
<div class="row">
  <div class="col-xs-12">
    <%= form_tag "/todos"  do%>
      <input name="content" type="text" class="form-control" placeholder="Add a new todo">
      <input name="user_id" type="hidden" value="<%= current_user.id %>">
    <% end %>
  </div>
</div>

<hr>
<% end %>

<!-- Responsive, Isotope-based layout example -->

<div class="row">
  <div class="col-xs-12">
    <input type="text" id="quicksearch" placeholder="Search Todos (start typing)" class="form-control">
  </div>
</div>

<hr>

<div class="row isotope-container">
<% @todos.each do |todo| %>
  <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 isotope-item">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Todo #<%= todo.id %></h3>
      </div>
      <div class="panel-body">
        <dl>
          <dt>Content</dt>
          <dd><%= todo.content %></dd>

          <dt>User</dt>
          <dd><%= todo.user.email %></dd>

        </dl>
        <div class="btn-group btn-group-justified">
          <%= link_to todo_url(todo), :class => "btn btn-primary" do %>
            <i class="fa fa-search-plus"></i>
          <% end %>
          <% if todo.user == current_user %>
            <%= link_to edit_todo_url(todo), :class => "btn btn-warning" do %>
              <i class="fa fa-edit"></i>
            <% end %>
            <%= link_to todo_url(todo), :method => "delete", :data => { :confirm => "Do you really want to delete this todo?" }, :class => "btn btn-danger" do %>
              <i class="fa fa-trash-o"></i>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
</div>

<!-- JavaScript for Isotope layout and quicksearch -->
<!-- JavaScript for Isotope layout and quicksearch -->
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery.imagesloaded/3.1.8/imagesloaded.pkgd.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery.isotope/2.0.0/isotope.pkgd.min.js"></script>
<script>
  $(function() {
    // quick search regex
    var qsRegex;

    // init Isotope
    var $container = $('.isotope-container');

    $container.imagesLoaded(function() {
      $container.isotope({
        itemSelector: '.isotope-item',
        layoutMode: 'masonry',
        filter: function() {
          return qsRegex ? $(this).text().match( qsRegex ) : true;
        }
      })
    });

    // use value of search field to filter
    var $quicksearch = $('#quicksearch').keyup( debounce( function() {
      qsRegex = new RegExp( $quicksearch.val(), 'gi' );
      $container.isotope();
    }, 200 ) );

  });

  // debounce so filtering doesn't happen every millisecond
  function debounce( fn, threshold ) {
    var timeout;
    return function debounced() {
      if ( timeout ) {
        clearTimeout( timeout );
      }
      function delayed() {
        fn();
        timeout = null;
      }
      timeout = setTimeout( delayed, threshold || 100 );
    }
  }
</script>

<!-- End responsive, Isotope-based layout example -->
